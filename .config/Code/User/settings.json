{
    "vim.handleKeys": {
        "<C-d>": true,
        "<C-s>": false,
        "<C-c>": false,
        "<C-z>": false,
        "<C-b>": false,
        "<C-w>": false,
    },
    "vim.normalModeKeyBindings": [
        {
            "before": ["<C-u>"],
            "after": ["<C-u>", "z","z"]
        },
        {
            "before": ["<C-d>"],
            "after": ["<C-d>", "z", "z"],
        }
    ],    

    "editor.minimap.enabled": false,

    "editor.fontFamily": "JetBrainsMono Nerd Font",
    "window.menuBarVisibility": "toggle",
    
    "workbench.colorCustomizations": {
        "[Tokyo Night]": {
            "editor.background": "#16161e",
            // "activityBar.background": "#0e0e11",
            // "sideBar.background": "#0e0e11",     
            // "editorGroupHeader.tabsBackground": "#0e0e11",
            // "tab.activeBackground": "#0e0e11",
            // "tab.inactiveBackground": "#0e0e11",
            // "statusBar.background": "#000000",
            // "panel.background": "#0e0e11",
            // "terminal.background": "#0e0e11"
        },

        "[Gruvbox Dark Hard]": {
            // "editor.background": "#15181c"
            "sideBar.border": "#00000000",
            "activityBar.border": "#00000000",
            // "tab.border": "#ff00000",
            // "tab.activeBorder": "#ff0000"
        },

        "[Gruvbox Material Dark]": {
            // "editor.background": "#1d2021"
        }
    },
    "terminal.integrated.defaultProfile.linux": "zsh",
    "glassit.alpha": 255,
    "editor.lineNumbers": "relative",
    "gruvboxMaterial.darkContrast": "hard",
    "[python]": {
        "editor.formatOnType": true
    },
    "security.workspace.trust.untrustedFiles": "open",
    "workbench.colorTheme": "Gruvbox Dark Hard",
    "window.zoomLevel": 1,
}
{
    "vim.handleKeys": {
        "<C-d>": true,
        "<C-s>": false,
        // "<C-c>": false,
        "<C-z>": false,
        "<C-b>": false,
        "<C-w>": false,
        "<C-h>": false,
    },
    "vim.normalModeKeyBindings": [
        {
            "before": ["<C-u>"],
            "after": ["<C-u>", "z","z"]
        },
        {
            "before": ["<C-d>"],
            "after": ["<C-d>", "z", "z"],
        }
    ],    

    "editor.minimap.enabled": false,

    "editor.fontFamily": "JetBrainsMonoNL Nerd Font",
    "editor.fontSize": 14,
    "window.menuBarVisibility": "toggle",
    
    "workbench.colorCustomizations": {
        "[Tokyo Night]": {
            "editor.background": "#16161e",
            // "activityBar.background": "#0e0e11",
            // "sideBar.background": "#0e0e11",     
            // "editorGroupHeader.tabsBackground": "#0e0e11",
            // "tab.activeBackground": "#0e0e11",
            // "tab.inactiveBackground": "#0e0e11",
            // "panel.background": "#0e0e11",
            // "terminal.background": "#0e0e11"
        },
        
        "[Gruvbox Dark Hard]": {
            "editor.background": "#151518",
            "sideBar.border": "#00000000",
            "activityBar.border": "#00000000",
            "statusBar.border": "#00000000",
            "statusBar.background": "#111314",
            "statusBar.noFolderBackground": "#111314",
            "editorGroupHeader.border": "#1d2021",
            // "tab.border": "#ff00000",
            "breadcrumb.focusForeground": "#ff0000",
            "tab.activeBorder": "#00000000",
            // "tab.bord": "#ff0000"
            "statusBarItem.remoteForeground": "#000000"
            // "statusBarItem.remoteBackground": "#5893bd"
        },

        "[Gruvbox Material Dark]": {
            // "editor.background": "#1d2021"
        }
    },
    "breadcrumbs.enabled": false,
    "terminal.integrated.defaultProfile.linux": "zsh",
    "glassit.alpha": 255,
    "editor.lineNumbers": "relative",
    "gruvboxMaterial.darkContrast": "hard",
    "[python]": {
        "editor.formatOnType": true
    },
    "security.workspace.trust.untrustedFiles": "open",
    "workbench.colorTheme": "Gruvbox Dark Hard",
    "window.restoreWindows": "none",
    "window.zoomLevel": 1
}